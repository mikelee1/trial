FROM _BASE_NS_/fabric-baseimage:_BASE_TAG_
ENV CGO_LDFLAGS_ALLOW=".*"
COPY payload/chaintool payload/protoc-gen-go /usr/local/bin/
ADD payload/goshim.tar.bz2 $GOPATH/src/
ADD payload/hkdf.tar.bz2 $GOPATH/src/
RUN mkdir -p /chaincode/input /chaincode/output
ADD payload/sm.tar.bz2 $GOPATH/src/github.com/hyperledger/fabric/sm
ADD payload/libs.tar.bz2 /usr/local/lib/
ADD payload/include.tar.bz2 /usr/local/include/
ADD payload/include.tar.bz2 $GOPATH/src/github.com/hyperledger/fabric/include/
ADD payload/libs.tar.bz2 /usr/lib/x86_64-linux-gnu/
