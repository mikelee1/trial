FROM _BASE_NS_/fabric-baseos:_BASE_TAG_
ENV FABRIC_CFG_PATH /etc/hyperledger/fabric
ENV LD_LIBRARY_PATH /usr/local/lib
RUN mkdir -p /var/hyperledger/production $FABRIC_CFG_PATH
COPY payload/orderer /usr/local/bin
ADD payload/sampleconfig.tar.bz2 $FABRIC_CFG_PATH/
ADD payload/include.tar.bz2 /usr/local/include/
ADD payload/libs.tar.bz2 /usr/local/lib/
ADD payload/libs.tar.bz2 /usr/lib/x86_64-linux-gnu/
EXPOSE 7050
CMD ["orderer"]
